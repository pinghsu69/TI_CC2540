<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dma.xch.ble"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/android:Theme.Light" 
        >
        <activity
            android:name="dma.xch.ble.LogoActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
         <activity 
            android:name="dma.xch.ble.PwmControl" 
            android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="dma.xch.ble.SHTControl" 
            android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="dma.xch.ble.RelayControl" 
            android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="dma.xch.ble.GsonsorControl" 
            android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="dma.xch.ble.LedControl" 
            android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="dma.xch.ble.PersonControl" 
            android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="dma.xch.ble.ScanActivity"
            android:screenOrientation="portrait" 
            ></activity>
        <activity 
            android:name="dma.xch.ble.MainActivity" 
            android:screenOrientation="portrait"
            ></activity>
        
    </application>

</manifest>
